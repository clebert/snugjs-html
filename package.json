{
  "name": "@snugjs/html",
  "version": "1.0.0",
  "description": "A JSX supporting API to conveniently create HTML elements and fragments.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/snugjs-html.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/mod.js",
  "types": "./lib/mod.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "node onecfg.js",
    "ci": "run-p compile:check compile:emit format:check lint test",
    "postci": "size-limit",
    "compile:check": "tsc --pretty",
    "compile:emit": "tsc --pretty --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent --passWithNoTests",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "devDependencies": {
    "@jest/globals": "^28.1.3",
    "@onecfg/standard": "^6.5.1",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@swc/core": "^1.2.241",
    "@swc/jest": "^0.2.22",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "onecfg": "^5.2.1",
    "prettier": "^2.7.1",
    "size-limit": "^8.0.1",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "name": "compression on",
      "limit": "1119 B",
      "path": "./lib/mod.js"
    },
    {
      "name": "compression off",
      "limit": "2531 B",
      "path": "./lib/mod.js",
      "gzip": false
    }
  ],
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
